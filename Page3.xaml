<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CursoMAUI.Page3"
             Title="Page3">
    <StackLayout>
        <!-- Header -->
        <Label Text="Header" FontSize="18" Background="Aqua" HorizontalTextAlignment="Center"/>

        <!-- Grid Content -->
        <Grid HeightRequest="400">
            <!-- Adjust HeightRequest as needed -->
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="50"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="50"/>
            </Grid.ColumnDefinitions>

            <!-- Content Area -->
            <Label Text="Content" FontSize="18" BackgroundColor="Gray" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" Grid.Column="1"/>

            <!-- Blue BoxView -->
            <BoxView Color="Blue" Grid.Column="0" VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand"/>

            <!-- Green BoxView -->
            <BoxView Color="Green" Grid.Column="2" VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand"/>
        </Grid>

        <!-- Footer -->
        <Label Text="FOOTER" FontSize="18" BackgroundColor="Pink" HorizontalTextAlignment="Center"/>
    </StackLayout>
</ContentPage>

