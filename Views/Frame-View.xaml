<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CursoMAUI.Views.Frame_View"
             Title="Frame_View">
    <HorizontalStackLayout HorizontalOptions="Center" VerticalOptions="Center">
        <Frame HasShadow="True" Padding="10" BackgroundColor="#4ceeff" BorderColor="Purple" CornerRadius="100" HeightRequest="80" WidthRequest="80">
            <Image Source="dotnet_bot.png" Aspect="AspectFit"/>
        </Frame>
        <Frame HasShadow="False" Padding="10" BackgroundColor="Purple" Margin="50,0,0,0">
            <Button Text="My Button" BackgroundColor="#2196F3" TextColor="#FFFFFF" />
        </Frame>
    </HorizontalStackLayout>
</ContentPage>