<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:drawable="clr-namespace:CursoMAUI.Data"
             x:Class="CursoMAUI.Views.Graphics_View"
             Title="Graphics_View">
    <ContentPage.Resources>
        <drawable:GraphicsDrawable x:Key="drawable"/>
    </ContentPage.Resources>
    <VerticalStackLayout BackgroundColor="LightBlue">
        <GraphicsView Drawable="{StaticResource drawable}" WidthRequest="500" HeightRequest="500" StartHoverInteraction="GraphicsView_StartHoverInteraction"/>
    </VerticalStackLayout>
</ContentPage>